# Flask配置
FLASK_ENV=development
FLASK_DEBUG=0
FLASK_APP=run.py

# 数据库配置
DB_HOST=your_database_host
DB_PORT=3306
DB_USER=your_database_user
DB_PASSWORD=your_database_password
DB_NAME=your_database_name

# JWT配置 - 请使用强密钥，可以用 python -c "import secrets; print(secrets.token_urlsafe(32))" 生成
JWT_SECRET_KEY=your_jwt_secret_key_here

# 加密主密钥 - 请使用 python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())" 生成
ENCRYPTION_MASTER_KEY=your_encryption_master_key_here

# 跨域配置 - 多个域名用逗号分隔
CORS_ORIGINS=http://localhost:5173,http://127.0.0.1:5173

# Cookie配置
COOKIE_DOMAIN=localhost

# 日志级别 (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Session配置
SESSION_COOKIE_SECURE=False  # 生产环境使用HTTPS时设置为True

# AI助手配置（可选）
AI_ENABLED=false
AI_BASE_URL=your_ai_api_base_url
AI_API_KEY=your_ai_api_key
AI_MODEL=gpt-4

# Phase 5 生产优化配置（可选）
PERFORMANCE_MONITOR_ENABLED=true
DATABASE_POOL_SIZE=20
DATABASE_POOL_TIMEOUT=30
CACHE_DEFAULT_TTL=300

# 安全配置
SECURITY_AUDIT_ENABLED=true
MAX_LOGIN_ATTEMPTS=5
IP_BLOCK_DURATION=3600

# 限流配置
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# 容错配置
CIRCUIT_BREAKER_THRESHOLD=5
CIRCUIT_BREAKER_TIMEOUT=60
MAX_RETRY_ATTEMPTS=3

# Redis配置（可选）
REDIS_URL=redis://localhost:6379/0
REDIS_CACHE_ENABLED=false